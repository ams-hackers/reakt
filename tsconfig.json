{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",

    "jsxFactory": "createElement",
    "jsx": "react"
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
